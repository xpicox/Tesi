    \pgfmathsetmacro\fnum{int(\insertframenumber - 1)}
    \pgfmathsetmacro\totfnum{int(\inserttotalframenumber - 2)}
    \begin{tikzpicture}
    \newcommand\barheight{9}
        \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
        \fill[color=uniud-brown] (-1.5,\barheight) rectangle (-0.35, \the\paperheight);
        \fill[color=uniud-orange] (-0.35,\barheight) rectangle (10.60, \the\paperheight);
        \fill[color=uniud-blue] (10.60,\barheight) rectangle (\the\paperwidth, \the\paperheight);
        \node[anchor=west,white, font=\small] at (-0.30,9.29)
            {\headercontents};
        \node[anchor=west,white, font=\small] at (10.6,9.29)
            {\fnum/\totfnum};
        \node[anchor=west] at (-1, 9.29){\includegraphics[width=11pt]{pollo-light.pdf}};
    \end{tikzpicture}
}

\setbeamertemplate{headline}[text line]{
    \ifnum\thepage>1\relax
        \ifprintheader
            \UniudHeadline
